{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@flea/core-infra": ["libs/flea/core-infra/src/index.ts"],
      "@flea/domain-infra": ["libs/flea/domain-infra/src/index.ts"],
      "@flea/event-modeling": ["libs/flea/event-modeling/src/index.ts"],
      "@flea/example/pets-api": ["libs/example/pets-api/src/index.ts"],
      "@flea/flea/asyncapi-generator-typescript-cdk-event-bridge": [
        "libs/flea/asyncapi-generator-typescript-cdk-event-bridge/src/index.ts"
      ],
      "@flea/flea/identity-provider-infra": [
        "libs/flea/identity-provider-infra/src/index.ts"
      ],
      "@flea/public-bus": ["libs/flea/public-bus/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
